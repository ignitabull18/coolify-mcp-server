{
  "name": "coolify-mcp-server",
  "version": "1.0.0",
  "description": "Comprehensive MCP server for Coolify API - provides access to all Coolify endpoints, resources, and operations",
  "main": "build/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "dev": "npm run build && node build/index.js",
    "dev:http": "npm run build && node build/server-http.js",
    "start": "node build/index.js",
    "start:http": "node build/server-http.js",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "coolify",
    "devops",
    "deployment",
    "api"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.6.0",
    "dotenv": "^16.3.0",
    "express": "^4.21.2",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.23",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
